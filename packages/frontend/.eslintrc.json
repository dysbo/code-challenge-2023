{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "import",
    "react"
  ],
  "rules": {
    "import/order": "error",
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "react/react-in-jsx-scope": 0,
    "semi": [
      "error",
      "never"
    ],
    "sort-keys": "error",
    "sort-vars": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
